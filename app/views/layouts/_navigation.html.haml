%nav.flex.items-center.justify-between.flex-wrap.bg-blue-800.px-8.py-4{ data: { controller: 'navigation' } }
  .flex.items-center.flex-shrink-0.text-white
    %span.text-sm.tracking-tight.text-blue-300 varchive
  .block.md:hidden
    %button.flex.items-center.px-3.py-2.border.rounded.text-blue-200.border-blue-400.hover:text-white.hover:border-white{ data: { action: 'click->navigation#toggle' } }
      %svg.fill-current.h-3.w-3{:viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
        %title Menu
        %path{:d => "M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"}
  .hidden.w-full.block.flex-grow.md:flex.md:items-center.md:w-auto{ data: { target: 'navigation.menu' } }
    .text-base.md:flex-grow
      - if user_signed_in?
        = nav_link_to 'Library',
                      library_path,
                      class: 'block mt-4 md:inline-block md:mt-0 text-blue-200 hover:text-white mr-4',
                      active_on: %r{/releases|/library}
        = nav_link_to 'Profile',
                      profile_path,
                      class: 'block mt-4 md:inline-block md:mt-0 text-blue-200 hover:text-white mr-4',
                      active_on: %r{/profile}
        = render 'search/form'
      - else
        = link_to 'Sign in',
                  new_user_session_path,
                  class: 'nav-link block mt-4 md:inline-block md:mt-0 text-blue-200 hover:text-white mr-4'





