%nav.bg-blue-800.px-4.py-4.md:px-0{ data: { controller: 'navigation' } }
  .clearfix.md:hidden
    %button.float-right.px-3.py-2.border.rounded.text-blue-200.border-blue-400.hover:text-white.hover:border-white{ data: { action: 'click->navigation#toggle' } }
      %svg.fill-current.h-3.w-3{:viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
        %title Menu
        %path{:d => "M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"}
  .hidden.w-full.block.flex-grow.md:flex.md:ml-auto.md:mr-auto{ class: 'md:w-2/3', data: { target: 'navigation.menu' } }
    .text-base.md:flex-grow
      - if user_signed_in?
        .flex.flex-wrap
          .w-full{ class: 'md:w-2/3' }
            .mt-2
              .block.mt-2.md:inline.md:mt-0.mr-4
                = nav_link_to 'Library',
                              library_path,
                              class: 'nav-link',
                              active_on: %r{/releases|/library}
              .block.mt-2.md:inline.md:mt-0
                = nav_link_to 'Profile',
                              profile_path,
                              class: 'nav-link',
                              active_on: %r{/profile}
          .w-full{ class: 'md:w-1/3' }
            .mt-2
              .block.mt-2.md:inline.md:mt-0
                = render 'search/form'
      - else
        = link_to 'Sign in',
                  new_user_session_path,
                  class: 'nav-link block mt-4 md:inline-block md:mt-0 text-blue-200 hover:text-white mr-4'





