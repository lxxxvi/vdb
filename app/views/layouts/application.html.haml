!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Vdb
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_pack_tag 'application'
  %body
    - if offline_mode?
      .bg-yellow-500.text-gray-900.text-xs.text-center offline mode
    .flex.bg-blue-900
      %div{ class: 'w-2/3' }
        %nav.pl-4.inline
          = link_to 'Releases', releases_path, class: 'nav-link'
      %div.text-right{ class: 'w-1/3' }
        .h-full.flex.flex-col.justify-center.mr-4
          = render 'search/form'
    .flash-banner
      - flash.each do |key, text|
        .px-4.py-2.text-gray-700.flash{ class: "flash-#{key}" }= text

    %div
      = yield
