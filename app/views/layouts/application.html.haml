!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Vdb
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_pack_tag 'application'
  %body
    - if offline_mode?
      .bg-yellow-500.text-gray-900.text-xs.text-center offline mode
    .flex.bg-blue-900
      %div{ class: 'w-2/3 ml-auto mr-auto' }
        .flex
          %div{ class: 'w-1/2' }
            %nav.inline
              - if user_signed_in?
                = link_to 'Releases', releases_path, class: 'nav-link'
              - else
                = link_to 'Sign in', new_user_session_path, class: 'nav-link'
          %div.text-right{ class: 'w-1/2' }
            - if user_signed_in?
              .h-full.flex.flex-col.justify-center
                = render 'search/form'
    .flash-banner
      - flash.each do |key, text|
        .py-3.text-gray-700.flash{ class: "flash-#{key}" }
          .flex
            .ml-auto.mr-auto{ class: 'w-2/3' }= text
    %div
      = yield
