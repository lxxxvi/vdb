.flex.mx-4.my-8
  .w-full.ml-auto.mr-auto
    %h1.text-2xl Forgot your password?

.flex
  .w-full.ml-auto.mr-auto
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .flex.bg-gray-100
        .w-full.mx-4.my-8
          .flex.mb-4
            .w-full
              = f.label :email
              = f.email_field :email,
                              autofocus: true,
                              autocomplete: 'email',
                              placeholder: 'pete@rock.com',
                              class: "w-full #{resource.errors.key?(:email) ? 'has-error' : nil}"
              - resource.errors.full_messages_for(:email).each do |message|
                .text-xs.text-red-400= message
          .flex.my-6
            .w-full
              = f.submit 'Reset my password', class: 'green-button w-full'
          .flex.mt-6
            .w-full
              = render 'devise/shared/links'
