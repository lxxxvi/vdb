.flex.my-8
  .ml-auto.mr-auto{ class: 'w-1/5' }
    %h1.text-2xl Sign up

.flex
  .ml-auto.mr-auto{ class: 'w-1/5' }
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .flex.bg-gray-100.border.border-gray-300
        .w-full.m-4
          .flex.mb-4
            .w-full
              = f.label :email
              = f.email_field :email,
                              autofocus: true,
                              autocomplete: 'email',
                              placeholder: 'pete@rock.com',
                              class: "w-full #{resource.errors.key?(:email) ? 'has-error' : nil}"
              - resource.errors.full_messages_for(:email).each do |message|
                .text-xs.text-red-400= message

          .flex.mb-4
            .w-full
              = f.label :password
              = f.password_field :password,
                                 autocomplete: 'new-password',
                                 placeholder: 'yourmomma',
                                 class: "w-full #{resource.errors.key?(:password) ? 'has-error' : nil}"
              - resource.errors.full_messages_for(:password).each do |message|
                .text-xs.text-red-400= message


          .flex.my-6
            .w-full
              = f.submit 'Sign up', class: 'green-button w-full'
          .flex.mt-6
            .w-full
              = render 'devise/shared/links'
