= form_with(url: '/search', method: 'get', class: 'search-form') do
  .flex
    %div{ class: 'w-2/3' }
      = text_field_tag :search_catno,
                       params[:search_catno],
                       placeholder: 'Catalog #',
                       autofocus: true,
                       class: 'w-full text-sm py-1'
    %div{ class: 'w-1/3' }
      = submit_tag 'Search',
                   class: 'py-1 bg-blue-500 px-3 text-blue-100 text-sm w-full'
